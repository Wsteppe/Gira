@using Gira.ResourcesUI
@{
    ViewBag.Title = "Home Page";
}


<div class="jumbotron">
    <h1>Ticketing Service</h1>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>@Gira.ResourcesUI.GiraUI.Login</h2>
    </div>

    <div class="col-md-4">
        
        <p>
            @Gira.ResourcesUI.GiraUI.Email
