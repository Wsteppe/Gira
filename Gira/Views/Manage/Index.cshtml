@model Gira.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your profile settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Manage profile:</dt>
        <dd>
            @Html.ActionLink("Change profile settings", "ManageProfile")
        </dd>
        <dt>Password:</dt>
        <dd>
            @(Model.HasPassword ? Html.ActionLink("Change your password", "ChangePassword") : Html.ActionLink("Create", "SetPassword"))
        </dd>
    </dl>
</div>
